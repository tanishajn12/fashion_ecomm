<%-include('../partials/header')%>
<%-include('../partials/navbar')%>
<%-include('../partials/flash')%>

<div class="row" style="margin-top: 80px;">

    <h1>Edit Product Form</h1>
    <div class="col-6 mx-auto">
    <form class="needs-validation" action="/products/<%=foundProduct._id%>?_method=PATCH" method="POST" nonvalidate>
        <div class = "mb-3">
            <label for="naam" class="form-label">Product Name : </label>
            <input type="text" class="form-control" name="name" id="naam" value="<%=foundProduct.name%>" placeholder="Name of Product" required>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Please Enter a Product name.
            </div>
        </div>

        <div class="mb-3">
            <label for="pic" class="form-label">Image URL:  </label>
            <input type="url" class="form-control" name="img" id="pic" placeholder="Image URL of Product" value="<%-foundProduct.img%>">
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Please choose a Image URL.
            </div>
        </div>

        <div class="mb-3">
            <label for="daam" class="form-label">Product Price: </label>
            <input type="number" class= "form-control" name="price" id="daam" placeholder="Price of Product"  value="<%=foundProduct.price%>" required>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Please choose a Product Price.
            </div>
        </div>

        <div class="mb-3">
            <label for="des" class="form-label">Description: </label>
            <textarea name ="desc" id="des" rows="5" placeholder="Description of Product" ><%=foundProduct.desc%></textarea>
        </div>

        <button type="submit" class="btn btn-sm btn-success">Save Changes</button>
    </form>
    </div>
</div>

<%-include('../partials/footer')%>
    
