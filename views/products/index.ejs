<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Display</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        h2 {
            padding: 10px;
            text-align: center;
            margin-bottom: 30px;
            font-weight: bold;
            color: #333;
        }

        .product-card {
            margin-bottom: 30px;
        }

        .card {
            border-radius: 10px;
            overflow: hidden;
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
        }

        .card img {
            height: 200px;
            object-fit: cover;
        }

        
        .text-center {
            text-align: center;
        }

        .card-body h3, .card-body h5 {
            margin: 10px 0;
        }

        form {
            display: inline;
        }

        .btnn {
          background-color: #007bff; /* A calming blue background color */
          color: #fff; /* White text for contrast */
          border: none;
          border-radius: 30px; /* Rounded corners for a modern look */
          padding: 12px 25px; /* Balanced padding for a consistent button size */
          font-size: 16px; /* Easy-to-read font size */
          text-transform: uppercase; /* Uniform uppercase text */
          letter-spacing: 0.8px; /* Slight letter spacing for readability */
          font-weight: 600; /* Slightly bolder font for emphasis */
          transition: all 0.3s ease; /* Smooth transition for hover and active effects */
          box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
      }
      
      .btnn:hover {
          background-color: #0056b3; /* Darker blue for hover effect */
          transform: translateY(-3px); /* Slight elevation on hover */
          box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15); /* Enhance shadow on hover */
      }
      
      .btnn:active {
          background-color: #003f7f; /* Even darker blue on click */
          transform: translateY(0); /* Reset elevation */
          box-shadow: 0 3px 5px rgba(0, 0, 0, 0.1); /* Subtle shadow when active */
      }
      
      .btnn:focus {
          outline: none; /* Remove default outline */
          box-shadow: 0 0 5px rgba(0, 123, 255, 0.5); /* Custom focus outline */
      }
      
      
    </style>
</head>
<body>
    <%- include('../partials/header') %>
    <%- include('../partials/navbar') %>
    <%- include('../partials/flash') %>

    <div class="container mt-5">
        <h2>Displaying All The Products</h2>
        <div class="row">
            <% for(let item of products) { %>
                <div class="col-lg-4 col-md-6 col-sm-12 product-card">
                    <div class="card text-center shadow">
                        <img src="<%= item.img %>" class="card-img-top" alt="Product Image">
                        <div class="card-body">
                            <h3 class="card-title"><%= item.name %></h3>
                            <h5 class="card-title">Rs: <%= item.price %></h5>
                            <p class="card-text"><%= item.desc %></p>
                            <a href="/products/<%= item._id %>" class="btn btnn">View Product</a>
                            <% if (currentUser && currentUser.role === "seller") { %>
                                <a href="/products/<%= item._id %>/edit" class="btn btnn">Edit Product</a>
                                <form action="/products/<%= item._id %>?_method=DELETE" method="POST">
                                    <button type="submit" class="btn btnn">Delete Product</button>
                                </form>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>

    <%- include('../partials/footer') %>
    <script src="/js/common.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
